<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    
    <div class="container-pen">
    <div class="card-pen">
      <div class="profile-picture">
        <img src="https://i.pinimg.com/280x280_RS/fe/7d/ee/fe7deef834e1fafe56f8023ced803ca9.jpg" alt="Profile Picture">
      </div>
      <h2 class="name"><%= userdata.fullname %></h2>
      <h3 class="username">@<%= userdata.username %></h3>
      <p class="tagline">some taglines</p>
      <p class="description">some description</p>
      <a href="/logout" class="button">Log out</a>
      <form action="/upload" method="post" enctype="multipart/form-data">
        <input type="text" name="filecaption" placeholder="Caption">
        <input type="file" name="file">
        <button type="submit">Upload</button>
      </form>
    </div>
    </div>
    <div class="container pb-5 ">
      <div class="cards d-flex gap-3 align-items-start ">
        <% userdata.posts.map(post=>{%>
            <div class="card" style="width: 18rem;">
                  <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title"><%= post.postText %></h5>
                    
                  </div>
            </div>
     <% }) %>
      </div>
      
        
    </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>




